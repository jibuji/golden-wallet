{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "golden-wallet",
    "version": "1.0.2"
  },
  "tauri": {
    "allowlist": {
      "notification": {
        "all": true 
      },
      "dialog": {
        "open": true, 
        "save": true,
        "message": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": true,
        "sidecar": true,
        "scope": [
          {
            "name": "tasklist",
            "cmd": "tasklist",
            "args": [
              {
                "validator": "/FI"
              },
              {
                "validator": "PID\\s+eq\\s+\\d+"
              }
            ]
          },
          {
            "name": "ps",
            "cmd": "ps",
            "args": [
              {
                "validator": "-p"
              },
              {
                "validator": ".*"
              }
            ]
          },
          {
            "name": "kill",
            "cmd": "kill",
            "args": [
              {
                "validator": "-9"
              },
              {
                "validator": ".*"
              }
            ]
          },
          {
            "name": "ss",
            "cmd": "ss",
            "args": [
              {
                "validator": "-tlp"
              },
              {
                "validator": "sport\\s*=\\s*:\\S+"
              }
            ]
          },
          {
            "name": "taskkill",
            "cmd": "taskkill",
            "args": [
              {
                "validator": "/F"
              },
              {
                "validator": "/PID"
              },
              {
                "validator": "\\d+"
              }
            ]
          },
          {
            "name": "sidecar/minerd",
            "sidecar": true,
            "args": [
              {
                "validator": "--url=\\S+"
              },
              {
                "validator": "--coinbase-sig=\\S+"
              },
              {
                "validator": "--coinbase-addr=\\S+"
              },
              {
                "validator": "--threads=\\S+"
              }
            ]
          },
          {
            "name": "sidecar/bitbid",
            "sidecar": true,
            "args": [
              {
                "validator": "-rpcuser=\\S+"
              },
              {
                "validator": "-rpcpassword=\\S+"
              },
              {
                "validator": "-datadir=\\S+"
              },
              {
                "validator": "-rpcworkqueue=\\S+"
              },
              {
                "validator": "-reindex=\\S+"
              }
            ]
          }
        ]
      },
      "http": {
        "scope": [
          "http://*",
          "https://*",
          "ws://*",
          "wss://*"
        ],
        "all": true,
        "request": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": true,
        "exists": true,
        "scope": [
          "$APPDATA/**/**",
          "$RESOURCE/*"
        ]
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "golden-wallet",
        "width": 1200
      }
    ],
    "security": {
      "csp": "default-src blob: data: filesystem: ws: http: https: 'unsafe-eval' 'unsafe-inline' 'self' tauri:; connect-src http://localhost:9800 http://localhost:8848 http://bridge.bitbi.org:8848 https://bridge.bitbi.org:8849 https://bridge.bitbi.org tauri://localhost;"
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "nsis", "msi", "app", "dmg", "updater"],
      "identifier": "bitbi-golden-wallet",
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "sidecar/minerd",
        "sidecar/bitbid"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "resources/*"
      ],
      "shortDescription": "",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "updater": {
      "active": false
    }
  }
}
